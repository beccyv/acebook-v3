<div class="nav-top">
  <% if current_user %>
    <a href="sessions/create">My Profile</a>
    <a href="sessions/destroy">Log Out</a>
  <% else %>
    <a href="/welcome/index">Home</a>
    <a href="/login">Login</a>
    <a class="active" href="/signup">Sign Up</a>
  <% end %>
</div>
<div class="sign-up-box">
<h1>New User</h1>
<hr class="medium_hr">
<p id="alert"><%= alert %></p>
<%= form_with scope: :user, url: users_path, local: true do |form| %>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@user.errors.count, "error") %> prohibited
      this User from being saved:
    </h2>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <p>
    <%= form.label :first_name, class: "signuptext"%><br>
    <%= form.text_field :first_name, class: "signupbox" %>
    <br>
    <%= form.label :last_name, class: "signuptext" %><br>
    <%= form.text_field :last_name, class: "signupbox" %>
    <br>
    <%= form.label :email, class: "signuptext" %><br>
    <%= form.text_field :email, class: "signupbox" %>
    <br>
    <%= form.label :username, class: "signuptext" %><br>
    <%= form.text_field :username, class: "signupbox" %>
    <br>
    <%= form.label :password, class: "signuptext" %><br>
    <%= form.password_field :password, class: "signupbox" %>
    <br>
    <%= form.label :password_confirmation, class: "signuptext" %><br>
    <%= form.password_field :password_confirmation, class: "signupbox" %>
  </p>

<p class="button">
  <%= form.submit "Sign Up" %>
</p>

<% end %>

<div>
  <a class="link" href="/login">Already registered? Sign In!</a>
</div>

</div>
